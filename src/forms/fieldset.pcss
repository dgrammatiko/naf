fieldset {
  border: 1px solid var(--secondary-light);
  border-radius: var(--border-radius);
  margin: var(--line-height) 0;
  padding: 0 1rem 1rem 1rem;
}

fieldset > :last-child {
  margin-bottom: 0;
}

legend {
  background: var(--secondary-lighter);
  border: 1px solid var(--secondary-light);
  border-radius: var(--border-radius);
  color: var(--secondary-darker);
  padding: 0.25rem 0.5rem;
}
