h1,
h2,
h3,
h4,
h5,
h6 {
  color: var(--primary);
  font-weight: var(--font-weight-bold);
  margin: var(--heading-margin);
}

h1 {
  font-size: 2.5rem;
  line-height: 3rem;
}

h2 {
  font-size: 2rem;
  line-height: 2.5rem;
}

h3 {
  font-size: 1.66rem;
  line-height: 2rem;
}

h4 {
  font-size: 1.45rem;
}

h5 {
  font-size: 1.25rem;
}

h6 {
  font-size: 1.125rem;
}
