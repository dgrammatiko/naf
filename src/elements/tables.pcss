table:not([class]) {
  background-color: var(--secondary-bg);
  border: 0;
  border-collapse: collapse;
  border-spacing: 0;
  width: 100%;
}

thead:not([class]) {
  box-shadow: inset 0 -2px var(--primary);
}

tfoot:not([class]) {
  box-shadow: inset 0 2px var(--primary);
}

tbody:not([class]) tr:nth-child(even):not([class]) {
  background-color: var(--secondary-transparent);
  color: var(--secondary);
}

td:not([class]),
th:not([class]) {
  padding: 1rem 0.5rem;
  text-align: left;
  vertical-align: top;
}

th:not([class]) {
  font-weight: var(--font-weight-bolder);
}
