a:not([class]),
a:link:not([class]),
a:visited:not([class]),
a:active:not([class]),
a:focus:not([class]) {
  background-color: transparent;
  color: var(--primary);
  font-weight: var(--font-weight-bold);
  text-decoration: underline;
}

a:hover:not([class]) {
  background-color: var(--primary-dark);
  color: var(--primary-bg);
  text-decoration: none;
}

a[href^='mailto:']:not([class])::before {
  content: '📩 ';
}

a[href^='tel:']:not([class])::before {
  content: '📲 ';
}

a[href^='sms:']:not([class])::before {
  content: '💬 ';
}

a[href^='file:']:not([class])::before {
  content: '📂 ';
}

a[rel="external"]:not([class])::before {
  content: '🌐 ';
}

a[rel="bookmark"]:not([class])::before {
  content: '🔖 ';
}

a[rel="download"]:not([class])::before {
  content: '⤵️ ';
}
