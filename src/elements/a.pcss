a,
a:link,
a:visited,
a:active,
a:focus {
  background-color: transparent;
  color: var(--primary);
  font-weight: var(--font-weight-bold);
  text-decoration: underline;
}

a:hover {
  background-color: var(--primary-dark);
  color: var(--primary-bg);
  text-decoration: none;
}

